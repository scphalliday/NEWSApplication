<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataSelection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dataTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Respiratory Rate (Breath/min)"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/respButton0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text=">= 25"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/respButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="24 - 21"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/respButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="20 - 12"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/respButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="11 - 9"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/respButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="&lt;= 8"
            app:backgroundTint="#00BCD4" />

        <TextView
            android:id="@+id/infoTextResp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the correct respiratory rate above" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>