<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tempDataTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conciousness"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/conButton0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="Alert"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/conButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="Confusion"
            app:backgroundTint="#00BCD4" />

        <TextView
            android:id="@+id/midText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not alert or confused, but responsive to..."
            android:textAlignment="center" />

        <Button
            android:id="@+id/conButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="Voice"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/conButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="Pain"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/conButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="Unresponsive"
            app:backgroundTint="#00BCD4" />

        <TextView
            android:id="@+id/infoTextHR2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the correct level of consciousness above" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>