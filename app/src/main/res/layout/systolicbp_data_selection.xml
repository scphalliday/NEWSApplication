<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tempDataTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Systolic Blood Pressure (mmHg)"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bpButton0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text=">= 220"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/bpButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="219 - 111"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/bpButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="110 - 101"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/bpButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="100 - 91"
            app:backgroundTint="#00BCD4" />

        <Button
            android:id="@+id/bpButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="DataButtonPress"
            android:text="&lt; 91"
            app:backgroundTint="#00BCD4" />

        <TextView
            android:id="@+id/infoTextHR2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the correct systolic BP above" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>